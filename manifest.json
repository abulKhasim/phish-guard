{
    "manifest_version": 3,
    "name": "PhishGuard.AI",
    "version": "0.1.0",
    "description": "Real-time phishing & social engineering protection.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "PhishGuard.AI"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "icons": {
        "128": "assets/logo.png"
    }
}